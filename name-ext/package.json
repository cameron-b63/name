
{
  "name": "name-ext",
  "displayName": "VSName",
  "description": "",
  "version": "0.0.1",
  "publisher": "The University of Texas at Dallas",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "name-ext.assemblecurrentfile",
        "title": "NAME: Assemble Current File",
        "icon": "$(chip)"
      },
      {
        "command": "name-ext.linkcurrentfile",
        "title": "NAME: Link Current File",
        "icon": "$(combine)"
      },
      {
        "command": "name-ext.runnodebug",
        "title": "NAME: Run Without Debugging",
        "icon": "$(run)"
      },
      {
        "command": "name-ext.assemblerunnodebug",
        "title": "NAME: Assemble & Run (No Debug)",
        "icon": "$(console)"
      }
    ],
    "configuration": [
      {
        "title": "name-ext",
        "scope": "machine",
        "properties": {
          "name-ext.binDirectory": {
            "type": "string",
            "default": "",
            "markdownDescription": "Path to the bin directory."
          }
        }
      }
    ],
    "languages": [
      {
        "id": "mips",
        "extensions": [
          ".asm"
        ]
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "name-ext.assemblecurrentfile",
          "group": "navigation@1",
          "when": "editorLangId == mips"
        },
        {
          "command": "name-ext.linkcurrentfile",
          "group": "navigation@2",
          "when": "editorLangId == mips"
        },
        {
          "command": "name-ext.runnodebug",
          "group": "navigation@3",
          "when": "editorLangId == mips"
        },
        {
          "command": "name-ext.assemblerunnodebug",
          "group": "navigation@4",
          "when": "editorLangId == mips"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "name-ext",
          "title": "NAME",
          "icon": "$(chip)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "name-ext.tree",
        "contents": "Quick Options: \n\n[$(chip) Assemble](command:name-ext.assemblecurrentfile)\n\n[$(combine) Link](command:name-ext.linkcurrentfile)\n\n[$(run) Run Without Debugging](command:name-ext.runnodebug)\n\n[$(console) Assemble & Run (No Debug)](command:name-ext.assemblerunnodebug)",
        "when": "true"
      }
    ],
    "views": {
      "name-ext": [
        {
          "id": "name-ext.tree",
          "name": "NAME",
          "treeView": true
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
